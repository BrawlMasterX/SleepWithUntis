<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.SleepWithUntis" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FF6033</item>
        <item name="android:statusBarColor">#FFF3E0</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">#FFF3E0</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="DayRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DayTextStyle">
        <item name="android:textColor">#BF360C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimeInputStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FF6033</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">#FFCCBC</item>
    </style>

    <style name="OrangeTimePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">#FF6033</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/OrangeButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/OrangeButtonStyle</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="OrangeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#FF6033</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>